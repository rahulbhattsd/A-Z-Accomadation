<section class="listings-section">
  <h1>A-Z Accommodation</h1>
  <h3>All Listings</h3>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
    <% for (let listing of allListings) { %>
      <div class="col">
        <div class="card listing-card h-100 d-flex flex-column">
          <!-- Clickable area for details -->
          <a href="/listings/<%= listing._id %>" class="listing-link flex-grow-1 text-decoration-none text-dark">
            <img
              class="card-img-top"
              src="<%= listing.image.url %>"
              alt="listing_image"
              style="object-fit: cover; height: 200px;"
            >
            <div class="card-body">
              <h5 class="card-title"><%= listing.title %></h5>
              <p class="card-text"><%= listing.description %></p>
            </div>
          </a>
          <!-- Book Now button footer -->
          <div class="card-footer bg-white border-0">
            <a
              href="/listings/<%= listing._id %>/book"
              class="btn btn-primary w-100"
            >
              Book Now
            </a>
          </div>
        </div>
      </div>
    <% } %>
  </div>
</section>






