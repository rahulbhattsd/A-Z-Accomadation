<!-- Bootstrap Cards for all listings -->
<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 g-4">
  <% for(let listing of allListings) { %>
    <div class="col">
      <div class="listing-card h-100">
        <a href="/listings/<%= listing._id %>" class="listing-link">
          <img class="card-img-top" src="<%= listing.image.url %>" alt="listing_image" style="object-fit: cover; height: 300px;">
       <div class="card-img-overlay"></div>
        <div class="card-body d-flex flex-column">
          <h5 class="card-title"><%= listing.title %></h5>
          <p class="card-text flex-grow-1"><%= listing.description %></p>
        </div> </a>
      </div>
    </div>
  <% } %>
</div>





